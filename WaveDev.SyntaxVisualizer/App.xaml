<Application x:Class="WaveDev.SyntaxVisualizer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WaveDev.SyntaxVisualizer"
             xmlns:models="clr-namespace:WaveDev.SyntaxVisualizer.ViewModels"
             StartupUri="./Views/MainWindow.xaml">
    <Application.Resources>

        <HierarchicalDataTemplate x:Key="SyntaxTreeViewItemDataTemplate" ItemsSource="{Binding ChildNodes}" DataType="{x:Type models:SyntaxNodeViewModel}">
            <StackPanel Orientation="Horizontal" Margin="4" Background="LightSeaGreen">
                <!--<Image  Margin="2" Source="{Binding Path=ImageUrl}" ></Image>-->
                <TextBlock Text="{Binding DisplayName}" Margin="2" >
                </TextBlock>
                <StackPanel.Effect>
                    <DropShadowEffect BlurRadius="2" Color="LightGray" Opacity=".2" ></DropShadowEffect>
                </StackPanel.Effect>
            </StackPanel>
        </HierarchicalDataTemplate>

    </Application.Resources>
</Application>
