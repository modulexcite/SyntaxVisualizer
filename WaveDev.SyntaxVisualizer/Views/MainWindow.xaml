<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaveDev.SyntaxVisualizer"
        xmlns:models="clr-namespace:WaveDev.SyntaxVisualizer.ViewModels"
        mc:Ignorable="d"
        Title="Code" Left="850" Top="300" Height="800" Width="1000"
        LostFocus="OnLostFocus"
        x:Class="WaveDev.SyntaxVisualizer.Views.MainWindow"
>
    
    <!--   
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit" 
    -->

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBox x:Name="SourceCodeTextBox" Text="{Binding SourceCode}" Grid.Column="0" LostFocus="OnSourceCodeTextBoxLostFocus" TabIndex="1" FontSize="20"/>
    </Grid>
</Window>
