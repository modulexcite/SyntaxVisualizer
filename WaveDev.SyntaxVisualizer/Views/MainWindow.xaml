<Window x:Class="WaveDev.SyntaxVisualizer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaveDev.SyntaxVisualizer"
        xmlns:models="clr-namespace:WaveDev.SyntaxVisualizer.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Window.DataContext>
        <models:MainViewModel />
    </Window.DataContext>
    
    <Grid>
        <TreeView DataContext="{Binding Syntax}" ItemsSource="{Binding Children}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}" >
                    <StackPanel Orientation="Horizontal" Margin="4" >
                        <TextBlock Text="{Binding DisplayName}" Margin="2" >
                        </TextBlock>
                        <StackPanel.Effect>
                            <DropShadowEffect BlurRadius="2" Color="LightGray" Opacity=".2" ></DropShadowEffect>
                        </StackPanel.Effect>
                    </StackPanel>
                </HierarchicalDataTemplate>

            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</Window>
