<Window x:Class="WaveDev.SyntaxVisualizer.Views.SyntaxTreeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaveDev.SyntaxVisualizer.Views"
        xmlns:models="clr-namespace:WaveDev.SyntaxVisualizer.ViewModels"
        mc:Ignorable="d"
        Title="Syntax Tree" Left="200" Top="200" Height="800" Width="600">
    
    <!--<Window.DataContext>
        <models:MainViewModel />
    </Window.DataContext>-->
    
    <Grid>
        <TreeView DataContext="{Binding SourceSyntax, Mode=OneWay}" ItemsSource="{Binding Children}" Grid.Column="0" SelectedValuePath="SelectedSourceSyntax" SelectedItemChanged="OnTreeViewSelectedItemChanged" TabIndex="2">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}" >
                    <StackPanel Orientation="Horizontal" Margin="1" >
                        <TextBlock Text="{Binding DisplayName}" Foreground="{Binding Color}" Margin="2" />
                    </StackPanel>
                </HierarchicalDataTemplate>

            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</Window>
